<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:theme="@style/Theme.CustomerCallingV2">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_existingCustomerLayoutPopup"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/purple_500"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_custNamePopup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="Hello World!"
                    android:textColor="?android:textColorPrimaryInverse" />

                <TextView
                    android:id="@+id/tv_custPhonePopup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="4dp"
                    android:text="+9123123"
                    android:textColor="?android:textColorSecondaryInverse" />



            </LinearLayout>

            <ImageView
                android:id="@+id/btClosePopup"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="top"
                android:layout_margin="7dp"
                android:src="@drawable/ic_baseline_close_24" />



        </LinearLayout>


        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Last Ordered "
                android:layout_marginEnd="15dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="10/20/2023"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:text="Place New Order"
            android:id="@+id/bt_placeNewOrderPopup"
            app:iconGravity="end"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            style="@style/ShapeAppearanceOverlay.Material3.Button"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_newCustomerLayoutPopup"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:padding="14dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btClosePopupNew"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="top|end"
            android:layout_margin="7dp"
            android:src="@drawable/ic_baseline_close_24_primary" />




        <TextView
            android:layout_width="wrap_content"
            android:text="Customer is not yet registered"
            android:padding="10dp"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:text="Register Customer"
            android:textAllCaps="false"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>